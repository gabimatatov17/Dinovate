<html>
    <head>
        <link rel="stylesheet" href="/styles/popup.css">
    </head>
    <body>

        <div class="modal-overlay" onclick="closePopup(event)">
            <div class="modal-content" onclick="event.stopPropagation()">
                <span class="close-icon" onclick="closePopup(event)">âœ–</span> <!-- Close icon -->
                
                <% if (action == 'Create') { %>
                <h2>Create Card</h2>
                <form id="product-form" onSubmit="createItem('products')">
                    <div class="input-group">
                        <label for="cardName">Product Name</label>
                        <input type="text" id="cardName" name="cardName" placeholder="Enter product name" required>
                    </div>
                    <div class="input-group">
                        <label for="price">Price</label>
                        <input type="number" required step="0.01" id="price" name="price" placeholder="Enter product price" required>
                    </div>
                    <div class="input-group">
                        <label for="labels">Labels (comma-separated)</label>
                        <input type="text" id="labels" name="labels" placeholder="Enter labels" required>
                    </div>
                    <div class="input-group">
                        <label for="image_location">Image Location (URL)</label>
                        <input type="text" id="image_location" name="image_location" placeholder="Enter image URL" required>
                    </div>
                    <div class="input-group">
                        <label for="image_location">Craete post on Twitter</label>
                        <select id="twitter_post" name="twitter_post" onchange="changeColor(this)">
                            <option value="" disabled selected>Select Option</option>
                            <option value="yes">Yes</option>
                            <option value="no">No</option>
                        </select>
                    </div>
                    <button type="submit" class="submit-button">Create Product</button>
                </form>
                <% } else {%>
                    <h2>Edit Card</h2>
                    <form id="product-form" onSubmit="editItem('products')">
                        <input type="text" id="cardId" value="<%= cardId %>" hidden />
                        <div class="input-group">
                            <label for="cardName">Product Name</label>
                            <input type="text" id="cardName" name="cardName" value="<%= cardName %>" disabled>
                        </div>
                        <div class="input-group">
                            <label for="price">Price</label>
                            <input type="number" required step="0.01" id="price" name="price" value="<%= price %>" required>
                        </div>
                        <div class="input-group">
                            <label for="image_location">Image Location (URL)</label>
                            <input type="text" id="image_location" name="image_location" value="<%= image_location %>" required>
                        </div>
                        <button type="submit" class="submit-button">Edit Product</button>
                    </form>
                <% } %>
            </div>
        </div>        
    </body>
</html>
