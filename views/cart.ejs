<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Shopping Cart | Dinovate</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- External CSS -->
    <link rel="stylesheet" href="/styles/cart.css">

    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/9d9796826b.js" crossorigin="anonymous"></script>
</head>
<body>

<!-- Banner Section -->
<header class="banner">
    <div class="container-fluid d-flex justify-content-between align-items-center banner-content">
        <div class="left-nav">
            <!-- Left Nav with Icons -->
            <a href="/" class="nav-icon home-icon">üè†</a>
            <a href="/cart" class="nav-icon cart-icon active">üõí</a>
        </div>

        <div class="right-nav">
            <!-- Dropdown for Profile, Stores, Contact -->
            <div class="dropdown">
                <button class="dropdown-toggle" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    ‚ãÆ
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="/profile">Profile</a></li>
                    <li><a class="dropdown-item" href="/stores">Stores</a></li>
                    <li><a class="dropdown-item" href="/contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>
</header>


<!-- Shopping Cart Section -->
<section class="container mt-5" id="shopping-cart">
    <h3 class="text-center mb-5" style="text-decoration: underline;">Shopping Cart</h3>
    <div class="row">
        <!-- Cart Items Column (Left Side) -->
        <div class="col-lg-8">
            <!-- Table for Cart Items -->
            <table class="table table-hover table-cart">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="cart-items">
                    <% if (cart.length > 0) { %>
                        <% cart.forEach(item => { %>
                        <tr class="cart-item" data-cardid="<%= item.cardId %>">
                            <td class="d-flex align-items-center">
                                <img src="<%= item.image %>" alt="<%= item.cardName %>" class="img-thumbnail" width="100" height="100">
                                <span class="ms-3"><%= item.cardName %></span>
                            </td>
                            <td class="cart-price">‚Ç™<%= item.price.toFixed(2) %></td>
                            <td class="quantity"><%= item.quantity %></td>
                            <td>‚Ç™<%= (item.price * item.quantity).toFixed(2) %></td>
                            <td>
                                <button class="btn btn-secondary add-button" aria-label="Add another item">+</button>
                                <button class="btn btn-danger ms-2 remove-button">Remove</button>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">Your cart is empty</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Cart Summary Column (Right Side) -->
        <div class="col-lg-4">
            <!-- Cart Summary Card -->
            <div class="card">
                <div class="card-body">
                    <h5>Cart Summary</h5>
                    <p><strong>Items Total:</strong> ‚Ç™ <span id="items-total">50.00</span></p>

                    <!-- Address Form -->
                    <h5 class="mt-4">Shipping Address</h5>
                    <form id="address-form" class="mt-3">
                        <div class="mb-3">
                            <input type="text" id="street" name="street" class="form-control" placeholder="Street" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" id="locality" name="locality" class="form-control" placeholder="City" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" id="postal_code" name="postal_code" class="form-control" placeholder="Postal Code" pattern="[0-9]*" title="Postal code must be a number" required>
                        </div>
                        <input type="hidden" id="country" name="country" value="ISR"> <!-- Hidden field for Israel -->
                        <button type="submit" class="btn btn-primary w-100">Place Order</button>
                    </form>

                    <!-- Validation Message -->
                    <div id="validation-message" class="mt-3 text-center"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Order Placed Message -->
<div id="order-placed-message" class="order-placed-message">
    <div class="message-content">
        <i class="fa fa-check-circle fa-5x text-success mb-3 animate-check"></i>
        <h3>Thank you for your order!</h3>
        <h4 id="order-id">Your order ID is: </h4> <!-- Placeholder for dynamic orderId -->
    </div>
</div>

<!-- Axios CDN -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- External JS -->
<script src="/js/cart.js"></script>

</body>
</html>
