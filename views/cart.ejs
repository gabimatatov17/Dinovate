<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Shopping Cart | Dinovate</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- External CSS -->
    <link rel="stylesheet" href="/styles/cart.css">

    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/9d9796826b.js" crossorigin="anonymous"></script>

    <!-- Navbar CSS -->
    <link rel="stylesheet" href="/styles/navbar.css">

    <!-- Footer CSS -->
    <link rel="stylesheet" href="/styles/footer.css">
</head>

<body>

    <!-- Banner Section -->
    <header>
        <%- include('navbar') %>
    </header>

    <!-- Shopping Cart Section -->
    <section class="container mt-5" id="shopping-cart">
        <h3 class="text-center mb-5" style="text-decoration: underline;">Shopping Cart</h3>
        <div class="row">
            <!-- Cart Items Column (Left Side) -->
            <div class="col-lg-8">
                <!-- Table for Cart Items -->
                <table class="table table-hover table-cart">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="cart-items">
                        <% if (cart.length > 0) { %>
                            <% cart.forEach(item => { %>
                                <tr class="cart-item" data-cardid="<%= item.cardId %>">
                                    <td class="d-flex align-items-center">
                                        <div class="item-image-and-button">
                                            <img src="<%= item.image %>" alt="<%= item.cardName %>"
                                                class="img-thumbnail" width="100" height="100">
                                            <div class="generate-greeting-btn-container mt-2">
                                                <button id="newGreetingBtn" class="btn btn-primary">New Greeting</button>
                                            </div>
                                        </div>
                                        <span class="ms-3">
                                            <%= item.cardName %>
                                        </span>
                                    </td>
                                    <td class="cart-price">₪<%= item.price.toFixed(2) %></td>
                                    <td class="quantity">
                                        <%= item.quantity %>
                                    </td>
                                    <td>₪<%= (item.price * item.quantity).toFixed(2) %></td>
                                    <td>
                                        <button class="btn btn-secondary add-button" aria-label="Add another item">+</button>
                                        <button class="btn btn-danger ms-2 remove-button">Remove</button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center">Your cart is empty</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Cart Summary Column (Right Side) -->
            <div class="col-lg-4">
                <!-- Cart Summary Card -->
                <div class="card">
                    <div class="card-body">
                        <h5>Cart Summary</h5>
                        <p><strong>Items Total:</strong> ₪ <span id="items-total">50.00</span></p>

                        <!-- Address Form -->
                        <h5 class="mt-4">Shipping Address</h5>
                        <form id="address-form" class="mt-3">
                            <div class="mb-3">
                                <input type="text" id="street" name="street" class="form-control" placeholder="Street" required>
                            </div>
                            <div class="mb-3">
                                <input type="text" id="locality" name="locality" class="form-control" placeholder="City" required>
                            </div>
                            <div class="mb-3">
                                <input type="text" id="postal_code" name="postal_code" class="form-control"
                                    placeholder="Postal Code" pattern="[0-9]*" title="Postal code must be a number" required>
                            </div>
                            <input type="hidden" id="country" name="country" value="ISR">
                            <!-- Hidden field for Israel -->
                            <button type="submit" class="btn btn-primary w-100">Place Order</button>

                            <!-- Add a new button for Pickup Order -->
                            <button id="pickup-order-btn" class="btn btn-secondary mt-3">Pickup Order</button>

                            <!-- Dropdown to show store locations (Initially hidden) -->
                            <div id="store-locations" class="mt-3" style="display: none;">
                                <h5>Select a Store for Pickup:</h5>
                                <select id="store-select" class="form-select">
                                    <% stores.forEach(store => { %>
                                        <option value="<%= store.storeAdress %>"><%= store.storeName %> - <%= store.storeAdress %></option>
                                    <% }); %>
                                </select>
                                <button id="confirm-pickup-btn" class="btn btn-primary mt-3">Confirm Pickup</button>
                            </div>
                        </form>

                        <!-- Validation Message -->
                        <div id="validation-message" class="mt-3 text-center"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Greeting Modal -->
    <div class="modal fade" id="greetingModal" tabindex="-1" aria-labelledby="greetingModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="greetingModalLabel">Create New Greeting</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="greetingForm">
                        <div class="mb-3">
                            <label for="greetingDate" class="form-label">Date</label>
                            <input type="date" class="form-control" id="greetingDate" required>
                        </div>
                        <div class="mb-3">
                            <label for="greetingName" class="form-label">Recipient's Name</label>
                            <input type="text" class="form-control" id="greetingName" placeholder="Enter recipient's name" required>
                        </div>
                        <div class="mb-3">
                            <label for="greetingEvent" class="form-label">Event</label>
                            <input type="text" class="form-control" id="greetingEvent" placeholder="Enter the event (e.g., Birthday)" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="generateGreetingBtn">Generate Greeting</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Display Greeting Section -->
    <div id="greetingDisplay" style="display:none;" class="mt-4">
        <h3 id="generatedGreeting"></h3>
        <button class="btn btn-success" id="acceptGreeting">Accept</button>
        <button class="btn btn-warning" id="tryAgainGreeting">Try Again</button>
        <button class="btn btn-info" id="editGreeting">Edit Manually</button>
    </div>

    <!-- Order Placed Message -->
    <div id="order-placed-message" class="order-placed-message">
        <div class="message-content">
            <i class="fa fa-check-circle fa-5x text-success mb-3 animate-check"></i>
            <h3>Thank you for your order!</h3>
            <h4 id="order-id">Your order ID is: </h4>
        </div>
    </div>

    <!-- Item quantity changed popup -->
    <div id="item-added-popup" class="item-added-popup" style="display: none;">
        <div class="popup-content">
            <span id="popup-text"></span>
            <i class="fa fa-check-circle" style="color: green;"></i>
        </div>
    </div>

    <%- include('footer') %>

    <!-- Axios CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- External JS -->
    <script src="/js/cart.js"></script>

    <!-- Greeting Modal and API interaction script -->
    <script>
        // Show the modal when 'New Greeting' button is clicked
        document.querySelectorAll('#newGreetingBtn').forEach(button => {
            button.addEventListener('click', function () {
                var myModal = new bootstrap.Modal(document.getElementById('greetingModal'));
                myModal.show();
            });
        });

        // Handle greeting generation when 'Generate Greeting' button is clicked
        document.getElementById('generateGreetingBtn').addEventListener('click', function () {
            const date = document.getElementById('greetingDate').value;
            const name = document.getElementById('greetingName').value;
            const event = document.getElementById('greetingEvent').value;

            if (date && name && event) {
                // Send data to the server
                fetch('/greetings/generate-greeting', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ date, name, event }),
                })
                .then(response => response.json())
                .then(data => {
                    document.getElementById('generatedGreeting').textContent = data.greeting;
                    document.getElementById('greetingDisplay').style.display = 'block';
                    var myModalEl = document.getElementById('greetingModal');
                    var modal = bootstrap.Modal.getInstance(myModalEl);
                    modal.hide();  // Hide the modal once the greeting is generated
                })
                .catch(error => console.error('Error:', error));
            } else {
                alert('Please fill out all fields.');
            }
        });

        // Accept the greeting
        document.getElementById('acceptGreeting').addEventListener('click', function () {
            alert('Greeting accepted!');
            document.getElementById('greetingDisplay').style.display = 'none';
        });

        // Try again (open the modal again)
        document.getElementById('tryAgainGreeting').addEventListener('click', function () {
            var myModal = new bootstrap.Modal(document.getElementById('greetingModal'));
            myModal.show();
        });

        // Edit the greeting manually
        document.getElementById('editGreeting').addEventListener('click', function () {
            const currentGreeting = document.getElementById('generatedGreeting').textContent;
            const editedGreeting = prompt('Edit your greeting:', currentGreeting);
            if (editedGreeting) {
                document.getElementById('generatedGreeting').textContent = editedGreeting;
            }
        });
    </script>
</body>
</html>
