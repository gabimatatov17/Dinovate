<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- External CSS -->
    <link rel="stylesheet" href="/styles/cart.css">
</head>
<body>

<!-- Shopping Cart Section -->
<section class="container mt-5" id="shopping-cart">
    <h3 class="text-center mb-5">Shopping Cart</h3>

    <!-- Title for Item and Price, centered above the relevant information -->
    <div class="row mb-2">
        <div class="col-lg-8 d-flex justify-content-between">
            <div class="text-center flex-grow-1">
                <strong>Item</strong>
            </div>
            <div class="text-center flex-grow-1">
                <strong>Price</strong>
            </div>
        </div>
    </div>
    <hr style="border-top: 1px solid lightgrey;">

    <div class="row">
        <!-- Shopping Cart Items -->
        <div class="col-lg-8">
            <div class="cart-items">
                <!-- Example Item -->
                <div class="cart-item mb-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center flex-grow-1">
                            <img src="card-image.jpg" alt="Card Image" class="img-thumbnail" width="100" height="100">
                            <span class="ms-3">Personalized Birthday Card</span>
                        </div> 
                        <div class="cart-item-actions text-center flex-grow-1">
                            <span class="cart-price">₪ 50.00</span>
                            <button class="btn btn-secondary add-button" aria-label="Add another item">
                                <span class="plus-icon">+</span>
                            </button>
                            <button class="btn btn-danger ms-2">Remove</button>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-secondary mt-2" onclick="personalizeCard()">Personalize</button>
                    </div>
                    <hr class="mt-4" style="border-top: 1px solid lightgrey;">
                </div>
                <!-- Repeat similar blocks for other items -->
            </div>
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5>Cart Summary</h5>
                    <p><strong>Items Total:</strong> ₪ <span id="items-total">50.00</span></p>
                    <div class="mb-3">
                        <label for="coupon" class="form-label">Coupon Code</label>
                        <input type="text" class="form-control" id="coupon" placeholder="Enter coupon code">
                    </div>
                    <div class="mb-3">
                        <label for="delivery-address" class="form-label">Delivery Address</label>
                        <textarea class="form-control" id="delivery-address" rows="3" placeholder="Enter delivery address"></textarea>
                    </div>
                    <button class="btn btn-dark w-100 mt-3">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- External JS -->
<script src="/js/cart.js"></script>

</body>
</html>
