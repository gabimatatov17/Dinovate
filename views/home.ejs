<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Card Generator</title>

     <!-- External CSS -->
    <link rel="stylesheet" href="/styles/home.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/9d9796826b.js" crossorigin="anonymous"></script>

    <!--  Footer CSS -->
    <link rel="stylesheet" href="/styles/footer.css">

    <!--  Navbar CSS -->
    <link rel="stylesheet" href="/styles/navbar.css">
</head>

<body>

<!-- Banner Section -->
<header class="site-header">
    <%- include('navbar') %>
</header>

<main>
    <div class="container">
        <h1>Welcome to Dinovate</h1>
        <h2>The place where you can get all the cards you wish for</h2>
    </div>
    <div class="blocks-container">
        <% items.forEach(function(item) { %>
            <div class="image-block" style="background-image: url('<%= item.image_location %>');">
                <p><%= item.cardName %></p>
            </div>
        <% }); %>
    </div>
</main>

<%- include('footer') %>

<script src="/js/home.js"></script>

</body>
</html>