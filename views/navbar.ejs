<!-- Updated Navbar with Dinovate text in white -->
<div class="banner">
    <!-- Left Side: Dinovate Text Only (No Image) -->
    <div class="banner-logo">
        <span class="logo-text">Dinovate</span> <!-- "Dinovate" text on the left -->
    </div>

    <!-- Right Side: Navigation Links -->
    <nav class="banner-nav">
        <% if (isAdmin) { %>
            <a href="/admin" class="nav-link">Admin Panel</a>
        <% } %>
        <a href="/" class="nav-link">Home</a>
        <a href="/cart" class="nav-link">Cart</a>

        <!-- Dropdown Menu -->
        <div class="dropdown-bar">
            <a class="nav-link">More</a>
            <div class="dropdown-content">
                <a href="/stores">Stores</a>
                <a href="/contact">Contact</a>
            </div>
        </div>

        <!-- Profile Icon with Dropdown -->
        <div class="dropdown-bar">
            <% if (isAuthenticated) { %>
                <a class="nav-link">
                    <i class="fa fa-user"></i>
                </a>
                <div class="dropdown-content">
                    <a href="/profile">My Profile</a>
                    <a href="/logout" id="logout-link">Logout</a>
                </div>
            <% } else { %>
                <button id="login-button" name="login-button" class="button" onclick="window.location.replace('/login')">Login</button>
            <% } %>
        </div>
    </nav>
</div>
