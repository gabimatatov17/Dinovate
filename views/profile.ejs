<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Profile | Dinovate</title>
    <link rel="stylesheet" href="/styles/profile.css">
    <script src="https://kit.fontawesome.com/9d9796826b.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
    <!-- Updated Banner -->
    <div class="banner">
        <!-- Left Side: Logo -->
        <div class="banner-logo">
            <img src="/images/logo/dinovate.jpg" class="logo-img" alt="Dinovate Logo">
            <span class="logo-text">Dinovate</span>
        </div>

        <!-- Right Side: Navigation Links -->
        <nav class="banner-nav">
            <a href="/" class="nav-link">Home</a>
            <a href="/cart" class="nav-link">Cart</a>

            <!-- Dropdown Menu -->
            <div class="dropdown">
                <a class="nav-link">More</a> <!-- Label for dropdown -->
                <div class="dropdown-content">
                    <a href="/profile">Profile</a>
                    <a href="/stores">Stores</a>
                    <a href="/contact">Contact</a>
                </div>
            </div>
        </nav>
    </div>
</header>

    <!-- Profile Content -->
    <div class="container mt-5">
        <h2><%= customer.firstName %>'s Profile</h2>  
        
        <!-- User Information -->
        <div class="profile-section">
            <h3>Personal Information</h3>
            <form action="/profile/update" method="POST">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" value="<%= customer.firstName %>" required>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" value="<%= customer.lastName %>" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" value="<%= customer.email %>" required>
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <input type="text" name="gender" value="<%= customer.gender %>" required>
                </div>
                <div class="form-group">
                    <label for="birthDate">Birth Date</label>
                    <input type="date" name="birthDate" value="<%= customer.birthDate.toISOString().substring(0, 10) %>" required>
                </div>
                <button type="submit" class="btn btn-primary">Update Information</button>
            </form>
        </div>

        <!-- User Orders -->
        <div class="orders-section mt-5">
            <h3>My Orders</h3>

            <% if (orders.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Total Price</th>
                            <th>Items</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.orderId %></td>
                            <td><%= order.dateCreated.toDateString() %></td>
                            <td>â‚ª<%= order.totalPrice.toFixed(2) %></td>
                            <td>
                                <ul>
                                    <% order.cards.forEach(card => { %>
                                    <li><%= card.greeting %> (Card ID: <%= card.cardId %>)</li>
                                    <% }) %>
                                </ul>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>You have no orders.</p>
            <% } %>
        </div>
    </div>

    <script src="/js/profile.js"></script>
</body>
</html>
