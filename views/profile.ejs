<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Profile | Dinovate</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" async>

    <!-- Profile-Specific CSS -->
    <link rel="stylesheet" href="/styles/profile.css">

    <!-- Navbar CSS -->
    <link rel="stylesheet" href="/styles/navbar.css">

    <!-- Footer CSS -->
    <link rel="stylesheet" href="/styles/footer.css">

    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/9d9796826b.js" crossorigin="anonymous"></script>
</head>

<body>
    <!-- Navigation bar included via EJS -->
    <header class="site-header">
        <%- include('navbar') %>
    </header>

    <!-- Profile Content -->
    <div class="container mt-5">
        <h2><%= customer.firstName %>'s Profile</h2>

        <!-- Personal Information Form -->
        <div class="profile-section mt-4">
            <h3>Personal Information</h3>
            <form action="/profile/update" method="POST">
                <div class="form-group mb-3">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" name="firstName" value="<%= customer.firstName %>" required>
                </div>
                <div class="form-group mb-3">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" name="lastName" value="<%= customer.lastName %>" required>
                </div>
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" value="<%= customer.email %>" required>
                </div>
                <div class="form-group mb-3">
                    <label for="gender">Gender</label>
                    <select name="gender" class="form-control" required>
                        <option value="Male" <%= customer.gender === 'Male' ? 'selected' : '' %>>Male</option>
                        <option value="Female" <%= customer.gender === 'Female' ? 'selected' : '' %>>Female</option>
                        <option value="Other" <%= customer.gender === 'Other' ? 'selected' : '' %>>Other</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="birthDate">Birth Date</label>
                    <input type="date" class="form-control" name="birthDate" value="<%= customer.birthDate.toISOString().substring(0, 10) %>" required>
                </div>

                <!-- Password Change Option -->
                <div class="form-group mb-3">
                    <label for="password">New Password</label>
                    <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-primary">Update Information</button>
            </form>

            <!-- Delete User Button -->
            <button type="button" class="btn btn-danger mt-4" id="delete-user-btn">Delete Account</button>
        </div>

        <!-- User Orders Section -->
        <div class="orders-section mt-5">
            <h3>My Orders</h3>
            <% if (orders.length > 0) { %>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Total Price</th>
                            <th>Items</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.orderId %></td>
                            <td><%= order.dateCreated.toDateString() %></td>
                            <td>â‚ª<%= order.totalPrice.toFixed(2) %></td>
                            <td>
                                <ul>
                                    <% order.cards.forEach(card => { %>
                                    <li><%= card.greeting %> (Card ID: <%= card.cardId %>)</li>
                                    <% }) %>
                                </ul>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>You have no orders.</p>
            <% } %>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="footer">
        <%- include('footer') %>
    </footer>

    <!-- Confirmation Modal for Delete Action -->
    <div id="delete-confirmation-modal" class="modal">
        <div class="modal-content">
            <h4>Are you sure you want to delete your account?</h4>
            <p>You will lose access to your account and previous orders.</p>
            <button id="confirm-delete-btn" class="btn btn-danger">Yes, delete my account</button>
            <button id="cancel-delete-btn" class="btn btn-secondary">Cancel</button>
        </div>
    </div>

    <!-- Profile JS -->
    <script src="/js/profile.js"></script>
</body>
</html>
